* {
    box-sizing: border-box;
}

.button-row {
    layout: horizontal;
    height: auto;
}

.button-row > * {
    margin: 1 2;
}

.button-row > .button-row-spacing {
    width: auto;
}

Editor {
    padding: 1 2;
}

Editor:focus {
    padding: 0 1;
    border: heavy $accent;
}

Editor #eof {
    width: 100%;
    text-align: center;
}

EditProcedure {
    height: 100%
}

EditProcedure #editor {
    height: 3fr;
}

EditProcedure #misc {
    height: 4fr;
}

EditProcedure #misc OptionList {
    border: solid $accent;
}

EditProcedure #debug_output {
    height: 3fr;
    border: solid $accent;
}


ConfirmDialog {
    align: center middle;
}

ConfirmDialog > Widget {
    align: center middle;
    padding: 1 2;
    height: auto;
    width: auto;
}

# I can't get the stupid buttons to be aligned, arg!
ConfirmDialog > Widget > * {
    width: auto;
    align-horizontal: center;
}
